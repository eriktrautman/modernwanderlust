<div id="archives">
  <h2>Archives</h2>
  <ul>
    <% Post.archives.reverse.each do |archive| %>
      <li>
        <a href="<%= posts_path(:filter_month => archive.month.to_date.strftime('%m'), :filter_year => archive.month.to_date.strftime('%Y')) %>">
          <%= archive.month.to_date.strftime('%B %Y') %> (<%= archive.count %>)
        </a>
      </li>
    <% end %>
  </ul>
</div>