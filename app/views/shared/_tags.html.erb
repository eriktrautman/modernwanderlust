<div class="tag-links">
  <h2>By Tag</h2>
  <ul>
    <% @tags.each do |tag| %>
      <%= link_to posts_path(:tag_filter => "#{tag.name}") do %>
        <li>
          <div class="count">
            <%=  tag.posts.count %>
          </div>
          <div class="name">
            <%= tag.name %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>