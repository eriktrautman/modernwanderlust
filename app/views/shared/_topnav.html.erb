<div id="topnav">

  
  <ul>
    
    <%= link_to root_path do %>
      <li class="<%= request.fullpath == root_path ? 'active' : '' %>">
        Home
      </li>
    <% end %>

    <%= link_to posts_path do %>
      <li class="<%= request.fullpath.include?(posts_path) ? 'active' : '' %>">
        Blog
      </li>
    <% end %>

    <% if @blog == true %>
    <% end %>

      <%= link_to archives_path do %>
        <li class="<%= request.fullpath.include?(archives_path) ? 'active' : '' %>">
          Archive
        </li>
      <% end %>
    
    <%= link_to about_path do %>
      <li class="<%= request.fullpath == about_path ? 'active' : '' %>">
        About
      </li>
    <% end %>

    <%= link_to contact_path do %>
      <li class="<%= request.fullpath == contact_path ? 'active' : '' %>">
        Contact
      </li>
    <% end %>

  </ul> 


</div>

