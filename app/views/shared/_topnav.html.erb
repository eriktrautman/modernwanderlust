<div id="topnav">
  <% if @post %>
    <div class="prev-next">
      <% unless @prev.empty? %>
        <span class="prev">
          <%= link_to "&laquo; Previous".html_safe, @prev[0], :class => "left" %>
        </span>
      <% else %>
        <span class="prev disabled">
          &laquo; Previous
        </span>
      <% end %>
    </div>
  <% end %>
  
  <ul>
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to "Blog", posts_path %></li>
    <li><%= link_to "About", about_path %></li>
    <li><%= link_to "Contact", contact_path %></li>
  </ul> 

  <% if @post %>  
    <div class="prev-next">
      <% unless @next.empty? %>
        <span class="next">
          <%= link_to "Next &raquo;".html_safe, @next[0], :class => "right" %>
        </span>
      <% else %>
        <span class="next disabled right">
          Next &raquo;
        </span>
      <% end %>
    </div>
  <% end %>
</div>

