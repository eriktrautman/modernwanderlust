<!DOCTYPE html>
<html>
<head>
  <title>Modernwanderlust</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= render "shared/titlebar" %>
    <div class="row">
      <div class="col-md-8">
        <%= render "shared/tagline" %>
        <%= render "shared/topnav" %>
        <div id="content">
          <%= yield %>
        </div>
      </div>
      <div id="sidebar">
        <div class="col-md-4">
          <%= render "shared/photo_box" %>
          <hr>
          <%= render "shared/tags" %>
          <hr>
          <%= render "shared/archives" %>
        </div>
      </div>
    </div>

</body>
</html>
